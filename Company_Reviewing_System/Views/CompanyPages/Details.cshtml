@model Company_Reviewing_System.Models.CompanyPage

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container position-relative" data-aos="fade-up" data-aos-delay="100">
    @switch (Model.CloseStatus)
    {
        case CloseOptions.ViewOnly:
            {
                <h3 class="text-center alert alert-danger">THIS COMPANY DOES NOT ACCEPT REVIEWS</h3>
                break;
            }
        case CloseOptions.ReOpened:
            {
                <h3 class="text-center alert alert-info">THIS COMPANY'S PAGE HAS BEEN CLOSED AND REOPENED BEFORE</h3>
                break;
            }
        case CloseOptions.Erased:
            {
                <h3 class="text-center alert alert-danger">THIS COMPANY DOES NOT ACCEPT REVIEWS</h3>
                <h3 class="text-center alert alert-secondary">THIS COMPANY HAS REQUESTED THAT ALL REVIEWS ARE ERASED, TREAD CAREFULLY</h3>
                break;
            }
    }
    <div class="row justify-content-center">
        <div class="col-xl-7 col-lg-9 text-center">
            <h1 class="company-profile-h1">@Html.DisplayFor(model => model.Name)</h1>
        </div>
    </div>
    <div>
        <img src="~/images/google2.0.0.jpg" width="300" height="300" class="img-thumbnail">
        <div id="buttons">
            <ul style="list-style-type:none;">
                <li>
                    <label class="switch">
                        <input type="checkbox" id="togBtn">
                        <div class="slider round">
                            <span class="on">Subscribed</span>
                            <span class="off">Subscribe</span>
                        </div>
                    </label>
                </li>
                <li>
                    <button type="button" class="btn btn-secondary">Claim Ownership</button>
                </li>
            </ul>
        </div>
    </div>

    <br />
    <div class="results">
        <div class="results-content">
            <!--<span class="stars">@Html.DisplayFor(model => model.Score)</span> -->
            <span class="stars">2.5</span>
        </div>
    </div>

</div>

<br />

<section id="about" class="about">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Company Info</h2>
        </div>

        <div class="row content">
            <div class="col-lg-6">
                <ul>
                    <li><i class="fas fa-check-double"></i> <b>@Html.DisplayNameFor(model => model.Headquarters): </b>@Html.DisplayFor(model => model.Headquarters)</li>
                    <li><i class="fas fa-check-double"></i> <b>@Html.DisplayNameFor(model => model.Industry): </b>@Html.DisplayFor(model => model.Industry)</li>
                    <li><i class="fas fa-check-double"></i> <b>@Html.DisplayNameFor(model => model.Region): </b>@Html.DisplayFor(model => model.Region)</li>
                    <li><i class="fas fa-check-double"></i> <b>@Html.DisplayNameFor(model => model.CreatedDate): </b>@Html.DisplayFor(model => model.CreatedDate)</li>

                </ul>
            </div>
            <div class="col-lg-6 pt-4 pt-lg-0">
                <a asp-controller="Review" asp-action="AddReviewView" asp-route-id="@Model.CompanyId" class="btn-learn-more">Write a review</a>
                <a href="#" class="btn-learn-more">View reviews</a>
            </div>
        </div>

    </div>
</section>
<br />
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2 class="page-header">Reviews on this company</h2>
            @if (Model.Reviews.Count == 0)
            {
                <p>Be the first to add a review!</p>
                <a class="btn btn-success text-white" asp-controller="Review" asp-action="AddReviewView" asp-route-id="@Model.CompanyId">Add new Review</a>
            }
            else
            {
                <section class="comment-list">
                    <div>
                        <dl>
                            @foreach (var review in Model.Reviews.OrderBy(r => r.Created))
                            {
                                @await Html.PartialAsync("../Review/_ReviewBox", review)
                            }
                        </dl>
                        <a class="btn btn-success text-white" asp-controller="Review" asp-action="AddReviewView" asp-route-id="@Model.CompanyId">Add new Review</a>
                    </div>

                </section>
            }

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery/Rating.js"></script>
    <script src="https://kit.fontawesome.com/23a681cc6f.js" crossorigin="anonymous"></script>
}

@section css{
    <link href="~/css/company-page.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
}
