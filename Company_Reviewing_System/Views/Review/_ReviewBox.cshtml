@model Company_Reviewing_System.Models.Review

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $(document).on('click', '#@Html.DisplayFor(m => m.ReviewId)', function (e) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("AddVote","Vote")",
                data: { reviewID: this.value, is_upvote: true },
                dataType:'json',
                success: function (response) {
                    if (response.success) {
                        alert(response.responseText);
                    }
                    else {
                        alert(response.responseText);
                    }
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
            return false;
        });
    </script>

</head>

<div>
    <article class="row mb-3 mt-3">
        <div class="col-md-2 col-sm-2 hidden-xs">
            <figure class="img-thumbnail">
                <img class="img-fluid" src="http://www.tangoflooring.ca/wp-content/uploads/2015/07/user-avatar-placeholder.png" />
                <figcaption class="text-center">
                    @if (Model.Author is null)
                    {
                        <div class="comment-user"><i>anonymous</i></div>
                    }
                    else
                    {
                        <div class="comment-user">@Model.Author.FullName</div>
                    }
                </figcaption>
            </figure>
        </div>
        <div class="col-md-10 col-sm-10">
            <div class="card arrow left">
                <div class="card-body pb-0">
                    <header class="text-left">
                        <!-- TO DO Sort Reviews by date-->
                        <!-- <div class="comment-user"> <i class="fa fa-user"></i></div> -->

                        <time class="comment-date"><i class="fa fa-clock-o"></i> Created on @Html.DisplayFor(m => m.Created.Date)</time>
                    </header>
                    <br />
                    <div class="comment-post">
                        <p>
                            @Html.DisplayFor(m => m.Body)
                        </p>
                    </div>
                    <p class="text-right">
                        <button id="@Html.DisplayFor(m=>m.ReviewId)" value="@Html.DisplayFor(m=>m.ReviewId)" class="buttons btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-up"></i> Upvote</button>
                        <a href="#" class="buttons btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-down"></i> Downvote</a>
                        <a href="#" class="buttons btn btn-outline-secondary btn-sm"><i class="fa fa-reply"></i> Reply</a>
                        <a href="#" class="buttons btn btn-outline-secondary btn-sm"><i class="fas fa-exclamation"></i> Report</a>
                    </p>
                </div>
            </div>
        </div>
    </article>

    <div>

        @foreach (Reply reply in Model.Replies.OrderBy(r => r.Date))
        {
            @await Html.PartialAsync("../Reply/_ReplyBox", reply);
        }
        <article class="row">
            <div class="col-md-11 col-sm-11 col-md-offset-1">
                @if (User.Identity.IsAuthenticated)
                    @await Component.InvokeAsync("AddNewReply", new { reviewId = Model.ReviewId })
            </div>
        </article>
    </div>
</div>


@section script{
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="~/js/vote.js"></script>
}

@section css{
    <link href="~/css/reviews.css" rel="stylesheet" />
}